<project name="wave-for-emacs" default="dist">
  <description>
    This ant file builds the Java client that emacs connects to
  </description>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="dist" location="dist"/>
  <property name="third-party-runtime" location="third-party/runtime"/>

  <path id="third-party-runtime-classpath">
    <fileset dir="${third-party-runtime}">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${build}">
      <classpath>
        <path refid="third-party-runtime-classpath"/>
      </classpath>
    </javac>
  </target>

  <target name="dist" depends="compile">
    <mkdir dir="${dist}/lib"/>

    <jar jarfile="${dist}/lib/wave-emacs-client.jar" basedir="${build}"/>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
